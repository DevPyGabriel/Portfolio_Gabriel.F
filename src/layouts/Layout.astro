---
import '@fontsource-variable/onest';
import "../styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string
	description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content="Astro" />
		<meta name="description" content={description} />
		<meta name="keywords" content="desarrollador web, diseñador UI UX, portafolio, Gabriel Fernandez, frontend, backend, diseño de interfaces" />
		<title>{title}</title>
		<link rel="canonical" href={Astro.url} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/og-image.jpg" /> <!-- Add an og-image.jpg in public/ -->

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/og-image.jpg" />

		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Gabriel Fernandez",
			"jobTitle": "Desarrollador Web y Diseñador UI & UX",
			"url": "https://porfolio-gabriel-desarrollador-web.netlify.app",
			"sameAs": [
				"https://www.linkedin.com/in/gabriel-co-fernandez/",
				"https://github.com/your-github" // Replace with actual GitHub
			],
			"description": {description}
		}
		</script>
	</head>

	<body>
		
        <div class="fixed inset-0 z-0 bg-slate-950">
            <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-size-[14px_24px] mask-[radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]">
            </div>
        </div>

        <div class="relative z-10 min-h-screen">

		<Header />
		<slot />

		<div class="px-4 sm:px-8">
			<Footer />
		</div>

	</body>

</html>

<style>
	:root {
		color-scheme: light dark;
		scroll-behavior: smooth;
		scroll-padding-top: 72px;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background: oklch(13% 0.028 261.692);
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		height: 100%;
	}
</style>
