---
import '@fontsource-variable/onest';
import "../styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string
	description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={description} />
		<title>{title}</title>
	</head>

	<body>
		
        <div class="fixed inset-0 z-0 bg-slate-950">
            <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-size-[14px_24px] mask-[radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]">
            </div>
        </div>

        <div class="relative z-10 min-h-screen">

		<Header />
		<slot />

		<div class="px-4 sm:px-8">
			<Footer />
		</div>

	</body>

</html>

<style>
	:root {
		color-scheme: light dark;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background: oklch(13% 0.028 261.692);
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		height: 100%;
	}
</style>
